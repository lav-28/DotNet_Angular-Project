@using GraduateTraineeEnrollmentMVC.ViewModels
@model AddStreamViewModel
<h1>Add New Stream</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DegreeId">Select Degree:</label>
        <select id="DegreeDropdown" asp-for="DegreeId" class="form-control">
            <option value="">-- Select Degree --</option>
            @foreach (var student in Model.DegreeList)
            {
                <option value="@student.DegreeId">@student.DegreeName </option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="StreamName" class="control-label"></label>
        <input asp-for="StreamName" class="form-control" />
        <span asp-validation-for="StreamName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StreamDescription" class="control-label"></label>
        <input asp-for="StreamDescription" class="form-control" />
        <span asp-validation-for="StreamDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>
